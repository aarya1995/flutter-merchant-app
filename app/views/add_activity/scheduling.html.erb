                  <%= check_box_tag(:sunday, "sunday") %>
                  <%= label_tag(:sunday, "Sunday") %>
                   <%= check_box_tag(:everyday, "everyday") %>
                  <%= label_tag(:everyday, "Everyday") %>
                </div>
                
