
    <div id="wrapper">

        <%= render 'shared/merchant_navbar' %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"><%= @merchant.business_name %> - Dashboard</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-3 col-md-6">

                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-gift fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge"><%= @offerings.count %></div>
                                    <div>Active Activities</div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-group fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">26</div>
                                    <div>New Customers!</div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-map-marker fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">124</div>
                                    <div>Active Locations!</div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-ticket fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">13</div>
                                    <div>Active Events!</div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <!-- markup for displaying active offerings in card view -->
            <% @offerings.each do |offering| %>
                <div class="row active-deals">
                    <div class="col-md-8 no-padding lib-item card-container" data-category="view">
                        <div class="lib-panel">
                            <div class="row box-shadow">
                                <div class="col-md-6">
                                    <img class="lib-img-show" src="<%= offering.image.url %>">
                                </div>
                                <div class="col-md-6">
                                    <div class="lib-row lib-header">
                                        <%= offering.title %>
                                        <div class="lib-header-seperator"></div>
                                    </div>
                                    <div class="lib-row lib-desc">
                                        <p><%= offering.description %></p>
                                        
                                        <% if offering.frequency == "once" %>
                                            <p></strong>Start time</strong>: <%= offering.start_time %></p>
                                            <p><strong>End time:</strong> <%= offering.end_time %></p>
                                        <% else %>
                                            <p><strong>Start time:</strong> <%= offering.start_time %></p>
                                            <p><strong>End time:</strong> <%= offering.end_time %></p>
                                            <p><strong>When:</strong> Every <% offering.days.each do |x| %>
                                                    <%= x %>, 
                                                <% end %>
                                        <% end %></p>

                                        <p><strong>Address:</strong> <%= offering.address %></p>

                                        <h3><i class="fa fa-facebook"></i>
                                        <i class="fa fa-twitter" style="margin-left:12px;"></i>
                                        <i class="fa fa-globe" style="margin-left:12px;"></i>
                                        </h3>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            <% end %>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->


<style>
.abhas-navbar {
    display: none;
}
</style>
