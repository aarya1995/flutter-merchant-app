<div id="wrapper">

        <%= render 'shared/merchant_navbar' %>

        <div id="page-wrapper">
           <!-- markup for progress bar -->
           <div class="container">

            <div class="row bs-wizard" style="border-bottom:0;">
                
                <div class="col-xs-3 bs-wizard-step active">
                  <div class="text-center bs-wizard-stepnum">Step 1</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Activity Summary</div>
                </div>
                
                <div class="col-xs-3 bs-wizard-step disabled"><!-- complete -->
                  <div class="text-center bs-wizard-stepnum">Step 2</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Add Tags</div>
                </div>
                
                <div class="col-xs-3 bs-wizard-step disabled"><!-- complete -->
                  <div class="text-center bs-wizard-stepnum">Step 3</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Scheduling</div>
                </div>
                
                <div class="col-xs-3 bs-wizard-step disabled"><!-- active -->
                  <div class="text-center bs-wizard-stepnum">Step 4</div>
                  <div class="progress"><div class="progress-bar"></div></div>
                  <a href="#" class="bs-wizard-dot"></a>
                  <div class="bs-wizard-info text-center">Booking</div>
                </div>
            </div>
          </div>  <!-- end markup for progress bar -->

           <div class="row offering-form-row">
            <div class="col-md-1"></div>
            <div class="col-md-6 offering-form-col">
                <%= form_for @booking, url: create_booking_path, :html => {:multipart => true, 'data-parsley-validate' => true} do |f| %>

                    <% if @booking.errors.any? %>
                      <div id="error_explanation" class="text-center error-msg">               
                        <% @booking.errors.full_messages.each do |msg| %>
                          <p><%= msg %></p>
                        <% end %>                  
                      </div>
                    <% end %> <!-- print errors if any -->
              
                    <div class="form-group">
                      <%= f.label(:title, "Title of activity:") %>
                      <%= f.text_field :title, class: 'form-control', :required => 'true' %>
                    </div>
                    
                    <div class="form-group">
                      <%= f.label(:venue_name, "Name of venue:") %>
                      <%= f.text_field :venue_name, class: 'form-control', :required => 'true' %>
                    </div>

                    <div class="form-group">
                        <%= f.label(:description, "Description of activity:") %>
                        <%= f.text_area(:description, class: 'form-control', size: '24x4', :required => 'true') %>
                    </div>
                    
                    <div class="form-group">
                      <%= f.label :address1, "Address 1" %>
                      <%= f.text_field :address1, class: 'form-control', :required => 'true' %>
                    </div>

                    <div class="form-group">
                      <%= f.label :address2, "Address 2" %>
                      <%= f.text_field :address2, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.label :city %>
                      <%= f.text_field :city, class: 'form-control', :required => 'true' %>
                    </div>

                    <div class="form-group">
                      <%= f.label :state %>
                     <%= f.select :state, options_for_select(us_states), class: 'form-control', :required => 'true' %>
                    </div>

                    <div class="form-group">
                      <%= f.label :zipcode %>
                      <%= f.text_field :zipcode, class: 'form-control', :required => 'true' %>
                    </div>

                    <div class="form-group"> <!-- form for multiple image uploads -->
                      <%= f.label(:offering_images, "Images (can select up to 3)") %>
                      <%= file_field_tag "photos[]", type: :file, multiple: true, :required => 'true' %>
                    </div>

                    <div class="actions">
                        <%= f.submit 'Next Step', class: 'btn btn-lg btn-green' %>
                    </div>
                <% end %>
            </div>
            </div class="col-md-5"></div>
           </div>
        </div>
        <!-- /#page-wrapper -->

</div>
    <!-- /#wrapper -->


<style>
.abhas-navbar {
    display: none;
}
</style>