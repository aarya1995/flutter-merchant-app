<div id="wrapper">

        <%= render 'shared/merchant_navbar' %>

        <div id="page-wrapper">
           <%= render 'shared/progress_bar' %>

           <div class="row offering-form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6 offering-form-col">
                <%= form_for Offering.new, url: create_offering_path do |f| %>
              
                    <div class="form-group">
                      <%= f.label(:title, "Title of activity:") %>
                      <%= f.text_field :title, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                      <%= f.label(:venue, "Name of venue:") %>
                      <%= f.text_field :venue, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                      <%= f.label :address %>
                      <%= f.text_field :address, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label(:description, "Description of activity:") %>
                        <%= f.text_area(:description, class: 'form-control', size: '24x4') %>
                    </div>

                    <div class="form-group">
                        <%= f.label(:image, "Image or Logo (optional)*") %>
                        <%= f.file_field :image, class: 'form-control'%>
                    </div>

                    <div class="actions">
                        <%= f.submit 'Next Step', class: 'btn btn-lg btn-green' %>
                    </div>
                <% end %>
            </div>
            </div class="col-md-3"></div>
           </div>
        </div>
        <!-- /#page-wrapper -->

</div>
    <!-- /#wrapper -->


<style>
.abhas-navbar {
    display: none;
}
</style>