<div id="wrapper">

        <%= render 'shared/merchant_navbar' %>

        <div id="page-wrapper">
           <%= render 'shared/progress_bar' %>
		    <div class="row offering-form-row">
            <div class="col-md-3"></div>
            <div class="col-md-6 offering-form-col">
              <!-- start of this dank form -->
               <%= form_for @offering, url: wizard_path do |f| %>
                <h2 style="margin-bottom: 5%;"><i class="fa fa-book"></i> Booking:</h2>

                <div class="form-group booking-step1">
                    <label><input type="checkbox" class="purchase"> Allow for in-app purchasing?</label>
				</div>
			
				<div class="price-info">
					<div class="form-group">
						<label for="price">Specify a price (e.g. $45.30):</label>
						<div class="inner-addon left-addon">
					      <i class="glyphicon glyphicon-usd"></i>      
					      <input type="text" name="price" class="form-control" placeholder="" />
					    </div>			
					</div>
					<div class="form-group" style="margin-top: 8px;">
						<label for="quantity" style="margin-bottom:20px;">Specify quantity of this deal you want to distribute. <small>(If unlimited, then just leave at zero.)</small></label>

						<input id="ex6" type="text" name="quantity" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="0"/&t
						<span id="ex6CurrentSliderValLabel"><span id="ex6SliderVal">0</span></span>
					</div>
				</div>
				
				<hr>
				<h2 style="margin-bottom: 6%;"><i class="fa fa-group"></i> Social:</h2>

				<div class="form-group">
						<label for="website">Enter url for website (optional)*:</label>
						<div class="inner-addon left-addon">
					      <i class="glyphicon glyphicon-globe"></i>      
					      <input type="text" name="website" class="form-control" placeholder="(http://www.mywebsite.com)" />
					    </div>			
				</div>

				<div class="form-group">
						<label for="Facebook">Facebook (optional)*:</label>
						<div class="inner-addon left-addon">
					      <i class="fa fa-facebook-square"></i>      
					      <input type="text" name="facebook" class="form-control" placeholder="(https://www.facebook.com/Starbucks)" />
					    </div>			
				</div>

				<div class="form-group">
						<label for="Facebook">Twitter (optional)*:</label>
						<div class="inner-addon left-addon">
					      <i class="fa fa-twitter"></i>      
					      <input type="text" name="twitter" class="form-control" placeholder="(https://twitter.com/starbucks)" />
					    </div>			
				</div>

                <div class="actions">
                      <%= f.submit "Submit", class: 'btn btn-lg btn-green' %>
                </div>
              <% end %>  
              <!-- end of this dank form -->
            </div>
            </div class="col-md-3"></div>
           </div>
           
        </div>
        <!-- /#page-wrapper -->

</div>
    <!-- /#wrapper -->

<script>
$('.purchase').click(function() {
    if( $(this).is(':checked')) {
        $(".price-info").show();
    } else {
        $(".price-info").hide();
    }
});	

/* javascript to init slider */
// With JQuery
$("#ex6").slider();
$("#ex6").on("slide", function(slideEvt) {
	$("#ex6SliderVal").text(slideEvt.value);
});

</script>

<style>
.abhas-navbar {
    display: none;
}
</style>