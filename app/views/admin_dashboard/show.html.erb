
    <div id="wrapper">
    <!-- admin navbar -->
    <%= render 'shared/admin_navbar' %>

        <div id="page-wrapper">
            <div class="row">
                <h1>Merchant Application Description</h1>
                <hr>

                <div class="col-md-12">
                    <div>
                    <h4 style="display:inline-block;"><ul>Business Name:</ul></h4> <p style="display:inline-block;"><%= @MerchantApplication.name %></p>                
                    </div>

                    <div>
                    <h4 style="display:inline-block;"><ul>Email:</ul></h4> <p style="display:inline-block;"><%= @MerchantApplication.email %></p>
                    </div>

                    <div>
                    <h4 style="display:inline-block;"><ul>Business Description:</ul></h4> <p style="display:inline-block;"><%= @MerchantApplication.description %></p>
                    </div>

                    <div>
                    <h4 style="display:inline-block;"><ul>Business Category:</ul></h4> <p style="display:inline-block;"><%= @MerchantApplication.category %></p>
                    </div>

                    <div>
                    <h4 style="display:inline-block;"><ul>Business Address:</ul></h4> <p style="display:inline-block;"><%= @MerchantApplication.address %></p>
                    </div>

                    <div>
                    <h4 style="display:inline-block;"><ul>Date of Application:</ul></h4> <p style="display:inline-block;"><%= format_time(@MerchantApplication.created_at.to_s) %></p>
                    </div>
                </div>
                <div class="col-md-4">
                    <a href="/admin_dashboard/new_merchant" class="btn btn-default submit-button add-merchant">Add Merchant</a>
                </div>
            </div>
               
        </div>
